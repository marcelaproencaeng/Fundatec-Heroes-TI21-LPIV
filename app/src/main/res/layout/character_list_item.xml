<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="136dp"
        android:layout_height="236dp"
        android:layout_marginBottom="20dp"
        android:background="@color/Blue"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardview"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Nome do personagem" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview"
            android:layout_width="167dp"
            android:layout_height="279dp"
            android:background="@drawable/gradiente"
            android:foreground="@drawable/logo_marvel"
            app:cardBackgroundColor="@color/lime"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Nome do personagem" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lime"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/img_hero"
            android:layout_width="9dp"
            android:layout_height="0dp"
            android:layout_marginTop_ToBottomOf="parent"
            android:layout_marginStart_ToStartOf="parent"
            app:cardCornerRadius="12dp"
            app:cardElevation="12dp"
            app:card/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_constraintBottom_ToBottomOf="parent"
            android:background="@color/lime"
            app:cardCornerRadius="12dp" />

        <ImageView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/logo_marvel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>


    </layout>